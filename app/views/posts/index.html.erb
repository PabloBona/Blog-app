<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="mt-2"><%= @user.name %>'s Posts</h1>
      <p class="lead">Here you can see all the posts by this user.</p>
    </div>
  </div>

  <div class="row">
    <% if @posts.empty? %>
      <div class="col-sm-12 custom-border rounded my-1">
        <p class="user-name my-3">There are no posts available for this user.</p>
      </div>
    <% else %>
      <% @posts.each do |post| %>
        <div class="col-sm-12 custom-border rounded my-1">
            <h5 class="user-name py-3">
              <%= link_to "Post #{post.id}", user_post_path(user_id: @user.id, id: post.id), title: "To Post Details" %>
            </h5>
          <h3 class="user-name">
            <%= post.title %>
          </h3>
          <p class="user-name">
            <%= post.text %>
          </p>
        </div>

        <div class="col-sm-12 custom-border rounded mb-5">
          <h4 class="user-name">Comments:</h4>
          <% if post.comments.empty? %>
            <p class="user-name">This post has no comments.</p>
          <% else %>
            <% post.comments.each do |comment| %>
              <p class="user-name">
                <%= comment.user.name %>: <%= comment.text %>
              </p>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div>
  <div class="container">
    <div class="row">
      <div class="col text-center mb-3">
        <%= link_to "Back to User Details", user_path(@user), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>


