<%= form_with(model: [@user, @post], url: user_posts_path(@user), method: :post, class: "form") do |form| %>
  <div class="container">
    <div class="row">
      <div class="col"> 
        <h2 class="mt-2">Create New Post for <%= @user.name %></h2>
        <div class="form-group my-3">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control bg-body-secondary" %>
        </div>

        <div class="form-group">
          <%= form.label :text %>
          <%= form.text_area :text, class: "form-control bg-body-secondary" %>
        </div>

        <div class="form-group my-3">
          <%= form.submit 'Create Post', class: "btn btn-dark" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
